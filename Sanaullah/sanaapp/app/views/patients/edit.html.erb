<div class="center jumbotron">
<h1>New Patient</h1>

<%= form_for :patient, url: patients_path do |p| %>
<p>
<%= p.label :Patient_Name %><br>
<%= p.text_field :pname %>
</p>
<p>
<%= p.label :Gender %><br>
<%= p.text_field :pgender%>
</p>
<p>
<%= p.label :Contact %><br>
<%= p.text_field :pcontact %>
</p>
<p>
<%= p.label :Address %><br>
<%= p.text_field :paddress%>
</p>
<p>
<%= p.submit %>
</p>
<% end %>
<br>
<br>
<a href="/patients" class="buttonsmall buttonb">Back</a>
<a href="/" class="buttonsmall buttonb">Home</a>
</div>
